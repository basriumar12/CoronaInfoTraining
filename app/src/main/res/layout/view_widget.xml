<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:id="@+id/tv_date"
            android:gravity="center"
            android:text="20 April 2019"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Info COVID-19 Di Indonesia"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="#f82649"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="@string/positif"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/positif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="323"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="#09ad95"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="@string/sembuh"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/sembuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="..."
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="#f9a825"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:text="@string/meninggal"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/meninggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:text="..."
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:gravity="center"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#DiRumahAja" />


</LinearLayout>